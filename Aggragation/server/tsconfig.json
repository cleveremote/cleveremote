{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "inlineSources": true,
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "baseUrl": ".",
      "lib": [
          "es2017",
          "dom"
      ],
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "**/*.component.ts",
      "**/*.directive.ts"
  ]
}
